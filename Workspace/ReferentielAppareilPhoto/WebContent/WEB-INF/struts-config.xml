<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="helloExpertusForm"
			type="life.light.common.form.HelloExpertusForm" />
	</form-beans>

	<action-mappings>
		<action path="/helloExpertus"
			type="life.light.common.action.HelloExpertusAction"
			name="helloExpertusForm">
			<forward name="success" path="/HelloExpertus.jsp" />
		</action>
	</action-mappings>

</struts-config>